//Shadow struct has to be implemented like this
struct Shadow {
	
	float distance;
	float bias;
	
	int numSamples;
	float sampleRange;
	float sampleRandomness;
	
};

//Light struct has to be implemented like this
struct Light {

    vec3 position;
	vec3 direction;
    vec3 color;
	float ambient;
	Shadow shadow;

};