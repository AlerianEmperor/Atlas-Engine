struct Ray {
	vec3 origin;
	vec3 direction;
	vec3 inverseDirection;
};

struct AABB {
	vec4 min;
	vec4 max;
};

struct Triangle {
	vec4 v0;
	vec4 v1;
	vec4 v2;
	vec4 n0;
	vec4 n1;
	vec4 n2;
};

struct Material {
	vec4 diffuseColor;
	vec4 specularAttributes;
};

struct BVHNode {
	
	AABB aabb;
	
	int leftChild;
	int rightChild;
	int triangleIndex;
	
};

struct Light {

    vec3 location;
	vec3 direction;
	
    vec3 color;
	float ambient;
	
	float scatteringFactor;
		
	float radius;

};