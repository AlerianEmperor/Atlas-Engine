// Shadow cascades
struct Cascade {
	
	vec2 resolution;
	float distance;
	mat4 cascadeSpace;	
	
};

//Shadow struct has to be implemented like this
struct Shadow {
	
	float distance;
	float bias;
	
	int sampleCount;
	float sampleRange;
	float sampleRandomness;
	
	int cascadeCount;
	
	Cascade cascades[4];
	
};

//Light struct has to be implemented like this
struct Light {

    vec3 position;
	vec3 direction;
    vec3 color;
	float ambient;
	Shadow shadow;

};